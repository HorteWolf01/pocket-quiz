<h1>Users</h1>
<br>
<table class="table">
  
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Confirmed</th>
      <th scope="col">Ctrl</th>
    </tr>
  </thead>

  <tbody>
    
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.email_confirmed %></td>
        <td>
          <div class="d-flex flex-row">
            <% if user.admin %>
              <%= button_to "Admin", "users/#{user.id}/switch_admin", :method => :post, :class => 'btn btn-success' %>
            <% else %>
              <%= button_to "User . .", "users/#{user.id}/switch_admin", :method => :post, :class => 'btn btn-success' %>
            <% end %>
            <%= button_to "Delete", "users/#{user.id}", :method => :delete, :class => 'btn btn-danger mx-2' %>
          </div>
        </td>
      </tr>
<% end %>

  </tbody>
</table>
